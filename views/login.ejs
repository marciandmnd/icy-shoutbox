<!DOCTYPE html>
<html>
  <% include head %>
  <body>
    <% include menu %>
    <div class='max-width-4 sm-max-width-2 mx-auto'>
      <h1><%= title %></h1>
      <p>Fill in the form below to sign in!</p>

      <% include messages %>

      <form action='/login' method='post'>
        <input class='block mb2' type='text' name='name' placeholder='Username' />
        <input class='block' type='password' name='password' placeholder='Password' />
        <p>
          <input type='submit' value='Sign in' />
        </p>
      </form>
    </div>
  </body>
</html>